generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Status {
  PENDENTE
  APROVADO
  REJEITADO
}

model Intention {
  id                 Int      @id @default(autoincrement())
  nome               String
  email              String   @unique
  empresa            String
  motivoParticipacao String
  status             Status   @default(PENDENTE)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
